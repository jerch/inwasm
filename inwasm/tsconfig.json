{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "lib-cjs",
    "src-cjs",
    "runtime"
  ]
}