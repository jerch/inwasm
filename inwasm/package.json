{
  "name": "inwasm",
  "version": "0.1.2",
  "description": "Inline WebAssembly.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "bin": {
    "inwasm": "./lib/cli.js"
  },
  "exports": {
    "./lib/mocha_shim": {
      "import": "./lib/mocha_shim.js",
      "require": "./lib/mocha_shim.cjs",
      "types": "./lib/mocha_shim.d.ts"
    },
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "test": "mocha lib/*.test.js",
    "test-types": "cp src/index.test-d.ts lib && tsd",
    "tsc": "tsc",
    "create-cjs": "node create-cjs.js",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "copy-cjs": "cp lib-cjs/index.js lib/index.cjs && cp lib-cjs/mocha_shim.js lib/mocha_shim.cjs",
    "cjs": "npm run create-cjs && npm run tsc-cjs && npm run copy-cjs",
    "watch": "tsc -w",
    "prepare": "npm run build",
    "prepack": "cp ../README.md .",
    "postpack": "rm README.md",
    "clean": "rm -rf lib lib-cjs src-cjs *.tgz runtime/lib runtime/*.tgz",
    "build": "npm run tsc && npm run cjs",
    "tgz": "npm pack && cd runtime && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jerch/inwasm.git"
  },
  "author": "Joerg Breitbart <j.breitbart@netzkolchose.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/acorn": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24",
    "mocha": "^11.7.5",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4",
    "chokidar": "^5.0.0",
    "colorette": "^2.0.20",
    "glob": "^13.0.0",
    "minimatch": "^10.1.1",
    "wabt": "^1.0.39"
  }
}
